{% extends 'layouts/base.html.twig' %}

{% block title %}Log in{% endblock %}
	{% block body %}
		<div class="container">
			<form novalidate method="POST">
				<fieldset class="col-md-3 center container" >
					<legend>Connexion</legend>
					<div class="form-group row ">
					</div>
					<div class="form-group ">
						<label for="email" class="form-label mt-4">addresse Email </label>
						<input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email" required autofocus>
					</div>
					<div class="form-group">
						<label for="password" class="form-label mt-4">Password</label>
						<input type="password" name="password" class="form-control" id="password" placeholder="Password" required="">
					</div><br>
					<button type="submit" class="btn btn-primary">Se connecter</button>
				</fieldset>
				<input type="hidden" name="csrf_token" value="{{ csrf_token('login_form') }}">
			</form>

		</div>
		
		{% block javascripts %}
		{% endblock %}
		
	{% endblock %}
